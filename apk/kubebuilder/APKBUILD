# Maintainer:
pkgname=kubebuilder
pkgver=4.1.0
pkgrel=0
pkgdesc="Kubebuilder - SDK for building Kubernetes APIs using CRDs"
url="https://book.kubebuilder.io/"
arch="all"
license="Apache-2.0"
depends=""
makedepends="go"
install=""
subpackages=""
source="$pkgname-$pkgver.tar.gz::https://github.com/kubernetes-sigs/kubebuilder/archive/refs/tags/v${pkgver}.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	default_prepare
	cd "$builddir"
	sed -i -e 's,\$(shell git rev-parse HEAD),v'$pkgver',g;' Makefile
	sed -i -e 's,\$(shell git describe --tags --dirty --broken),v'$pkgver',g;' Makefile
}

build() {
	cd "$builddir"
	make build
}

check() {
	# Replace with proper check command(s)
	:
}

package() {
	cd "$builddir"
	mkdir -p ${pkgdir}/usr/bin
	make install GOBIN=${pkgdir}/usr/bin
}
sha512sums="
7c6cafb11db91ff24855434363c358491b19221b5fdebb05a91449affdd9b827393e5dd4d88e239c53a292b5f1394949294576a3000a39ddbf1fce48ed24ca3a  kubebuilder-4.1.0.tar.gz
"
