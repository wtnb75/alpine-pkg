pkgname=fizz
pkgver=2021.06.07.00
pkgrel=0
pkgdesc="C++14 implementation of the TLS-1.3 standard"
url="https://github.com/facebookincubator/fizz"
arch="all"
license="BSD-3-clause"
depends=""
makedepends="cmake folly-dev glog-dev openssl-dev libsodium-dev gtest-dev zstd-dev libexecinfo-dev fmt-dev boost-dev double-conversion-dev gflags-dev libevent-dev binutils-dev zlib-dev xz-dev"
depends_dev="folly-dev glog-dev openssl-dev libsodium-dev gtest-dev zstd-dev libexecinfo-dev fmt-dev boost-dev double-conversion-dev gflags-dev libevent-dev binutils-dev zlib-dev xz-dev"
install=""
subpackages="$pkgname-dev"
source="${pkgname}-${pkgver}.tar.gz::https://github.com/facebookincubator/${pkgname}/archive/refs/tags/v${pkgver}.tar.gz 0001-alpine.patch"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	mkdir _build
	cd _build
	cmake ../fizz -DCMAKE_INSTALL_PREFIX=/usr -DPACKAGE_VERSION=${pkgver}
	make
}

check() {
	# Replace with proper check command(s)
	:
}

package() {
	cd "$builddir"/_build
	make install DESTDIR=$pkgdir
}
