pkgname=austin
pkgver=3.5.0
pkgrel=0
pkgdesc="Python frame stack sampler for CPython"
url="https://github.com/P403n1x87/austin"
arch="all"
license="GPLv3"
depends=""
makedepends="argp-standalone"
install=""
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/P403n1x87/$pkgname/archive/refs/tags/v${pkgver}.tar.gz 00-build.patch"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	autoreconf -i
	./configure --prefix=/usr --localstatedir=/var --sysconfdir=/etc --mandir=/usr/share/man
	make LIBS=-largp
}

check() {
	# Replace with proper check command(s)
	:
}

package() {
	cd "$builddir"
	make install DESTDIR=$pkgdir
}
