pkgname=goawk
pkgver=1.17.1
_pkgver=master
pkgrel=0
pkgdesc="A POSIX-compliant AWK interpreter written in Go"
url="https://github.com/benhoyt/goawk"
arch="all"
license="MIT"
depends=""
makedepends="go"
install=""
subpackages=""
source=""
_gourl="github.com/benhoyt/goawk"
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	mkdir -p $(dirname $builddir)
	cd $(dirname $builddir)
	git clone $url -b $_pkgver $(basename $builddir)
}

build() {
	cd $builddir
	go build
	cd awkgo
	go build
}

check() {
	# Replace with proper check command(s)
	:
}

package() {
	cd $builddir
	GOBIN=${pkgdir}/usr/bin go install
	cd awkgo
	GOBIN=${pkgdir}/usr/bin go install
}
