pkgname=pushpin
pkgver=1.34.0
pkgrel=0
pkgdesc="Proxy server for adding push to your API"
url="https://pushpin.org/"
arch="all"
license="AGPLv3"
depends=""
makedepends="rust cargo zeromq-dev qt5-qtbase-dev"
install=""
subpackages=""
source="https://github.com/fanout/${pkgname}/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.bz2"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	cargo update
	./configure --prefix=/usr --configdir=/etc
	make
}

check() {
	# Replace with proper check command(s)
	:
}

package() {
	cd "$builddir"
	make install INSTALL_ROOT=$pkgdir
}
