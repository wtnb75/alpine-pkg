# Maintainer:
pkgname=curl-quic
_pkgname=curl
pkgver=7.77.0
_pkgver_underscore=$(echo ${pkgver} | tr . _)
pkgrel=0
pkgdesc="curl + quic (quiche)"
url="https://curl.se/"
arch="all"
license="MIT"
depends=""
makedepends="rustup zlib-dev brotli-dev zstd-dev"
install=""
subpackages="${pkgname}-doc ${pkgname}-dev"
source="https://github.com/curl/${_pkgname}/releases/download/${_pkgname}-${_pkgver_underscore}/${_pkgname}-${pkgver}.tar.bz2"
builddir="$srcdir/${pkgname}"

prepare() {
	mkdir -p $builddir
	cd "$builddir"
	tar xfj ${srcdir}/${_pkgname}-${pkgver}.tar.bz2
	git clone --depth=1 --recursive https://github.com/cloudflare/quiche
	rustup-init -y
	. $HOME/.cargo/env
}

build() {
	cd "$builddir"/quiche
	cargo build --release --features ffi,pkg-config-meta,qlog
	mkdir deps/boringssl/src/lib
	ln -vnf $(find target/release -name libcrypto.a -o -name libssl.a) deps/boringssl/src/lib/

	cd "$builddir"/${_pkgname}-${pkgver}
	autoreconf -fi
	LDFLAGS="-Wl,-rpath,$PWD/../quiche/target/release" ./configure --prefix=/usr --localstatedir=/var --sysconfdir=/etc --mandir=/usr/share/man  --with-openssl=$PWD/../quiche/deps/boringssl/src --with-quiche=$PWD/../quiche/target/release --enable-alt-svc
	make
}

check() {
	# Replace with proper check command(s)
	:
}

package() {
	cd "$builddir"/${_pkgname}-${pkgver}
	make install DESTDIR=$pkgdir
}
sha512sums="75c5b399fb3ad54eff87343a695d38c065f0c141501d1adb5957df01bbcda3db3bb1b860126e33496b6285f819a1926d1c8a224b9482069f81ef2accc5a58272  curl-7.77.0.tar.bz2"
