# Contributor: Watanabe Takashi <wtnb75@gmail.com>
# Maintainer:
pkgname=gping
pkgver=1.3.1
pkgrel=0
pkgdesc="Ping, but with a graph"
url="https://github.com/orf/gping"
arch="all"
license="MIT"
depends=""
makedepends="cargo rust"
install=""
subpackages=""
source=""
builddir="${srcdir}/${pkgname}"

prepare() {
	mkdir -p $builddir
}

build() {
	cd "$builddir"
}

check() {
	:
}

package() {
	cd "$builddir"
	cargo install gping --locked --version ${pkgver} --root ${pkgdir}/usr
	rm -f ${pkgdir}/usr/.crates*
}
