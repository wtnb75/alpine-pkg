# Maintainer:
pkgname=deno
pkgver=1.18.2
pkgrel=0
pkgdesc="A secure JavaScript and TypeScript runtime"
url="https://deno.land/"
arch="all"
license="MIT"
depends=""
makedepends="rustup"
install=""
subpackages=""
source=""
builddir="${srcdir}/${_pkgname}"

prepare() {
	rustup-init -y
}

build() {
	cd "$builddir"
}

check() {
	# cd "$builddir"
	# python3 setup.py test
	:
}

package() {
	cd "$builddir"
	. $HOME/.cargo/env
	cargo install deno --locked --version ${pkgver} --root ${pkgdir}/usr
	rm -f ${pkgdir}/usr/.crates*
}

