# Contributor: Watanabe Takashi <wtnb75@gmail.com>
# Maintainer:
pkgname=b3sum
pkgver=1.5.0
pkgrel=0
pkgdesc="the official Rust and C implementations of the BLAKE3 cryptographic hash function"
url="https://github.com/BLAKE3-team/BLAKE3"
arch="all"
license="CC0-1.0/Apache-2.0"
depends=""
makedepends="cargo rust"
install=""
subpackages=""
source=""
builddir="${srcdir}/${pkgname}"

prepare() {
	mkdir -p $builddir
}

build() {
	cd "$builddir"
}

check() {
	:
}

package() {
	cd "$builddir"
	cargo install ${pkgname} --locked --version ${pkgver} --root ${pkgdir}/usr
	rm -f ${pkgdir}/usr/.crates*
}
