builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	make CFLAGS="-Dntp_adjtime=adjtimex"
}

check() {
	# Replace with proper check command(s)
	:
}

package() {
	cd "$builddir"
	make install DESTDIR=$pkgdir
}
