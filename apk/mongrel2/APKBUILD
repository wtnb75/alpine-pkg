pkgname=mongrel2
pkgver=1.13.0
pkgrel=0
pkgdesc="The Mongrel2 Web Server Project"
url="http://mongrel2.org/"
arch="all"
license="BSD-3-Clause"
depends=""
makedepends="zeromq-dev libucontext-dev mbedtls-dev sqlite sqlite-dev"
install=""
subpackages=""
source="https://github.com/mongrel2/${pkgname}/releases/download/v${pkgver}/${pkgname}-v${pkgver}.tar.bz2 0001-alpine.patch"
builddir="$srcdir/$pkgname-v$pkgver"

build() {
	cd "$builddir"
	make -f localmbedtls.mak PREFIX=/usr OPTLIBS=-lucontext
	# make PREFIX=/usr
}

check() {
	# Replace with proper check command(s)
	:
}

package() {
	cd "$builddir"
	make install DESTDIR=$pkgdir PREFIX=/usr
}
