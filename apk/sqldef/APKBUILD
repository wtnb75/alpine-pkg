package() {
	# Replace with proper package command(s)
	for i in mysqldef psqldef sqlite3def; do
		GO111MODULE=on GOBIN=${pkgdir}/usr/bin go install -ldflags "-X main.version=v${pkgver}" ${_gourl}/cmd/${i}@v${pkgver}
	done
}
