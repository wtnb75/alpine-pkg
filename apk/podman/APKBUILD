pkgname=podman
pkgver=3.2.0
pkgrel=0
pkgdesc="Podman: A tool for managing OCI containers and pods"
url="https://github.com/containers/podman"
arch="all"
license="Apache-2.0"
depends="conmon"
makedepends="go make libseccomp-dev gpgme-dev btrfs-progs-dev"
install=""
subpackages="$pkgname-doc"
source=""
_giturl=${url}
builddir="$srcdir/$pkgname"

prepare() {
	cd $(dirname $builddir)
	git clone --depth=1 ${_giturl} -b v${pkgver}
}

build() {
	cd ${builddir}
	make PREFIX=/usr
}

check() {
	# Replace with proper check command(s)
	:
}

package() {
	# Replace with proper package command(s)
	cd ${builddir}
	make install DESTDIR=${pkgdir} PREFIX=/usr
}
