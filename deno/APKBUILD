pkgname=deno
pkgver=1.10.1
pkgrel=0
pkgdesc="A secure JavaScript and TypeScript runtime"
url="https://deno.land/"
arch="all"
license="MIT"
depends=""
makedepends="cargo rust"
install=""
subpackages=""
source=""
builddir="${srcdir}/${_pkgname}"

build() {
	cd "$builddir"
}

check() {
	# cd "$builddir"
	# python3 setup.py test
	:
}

package() {
	cd "$builddir"
	cargo install deno --locked --version ${pkgver} --root ${pkgdir}/usr
}

